import pandas as pd
import matplotlib.pyplot as plt

try:
    df = pd.read_csv('data.csv')
    survival_counts = df['Survived'].value_counts()

    plt.figure(figsize=(8, 6))
    plt.bar(survival_counts.index, survival_counts.values, color=['red', 'green'])  #Added color for better visualization
    plt.xticks([0, 1], ['Dead', 'Alive'])
    plt.xlabel('Survival Status')
    plt.ylabel('Number of Passengers')
    plt.title('Titanic Passenger Survival')
    plt.savefig('output2.png')
    print("Graph of dead and live passengers in Titanic saved as output2.png")

except FileNotFoundError:
    print("Error: data.csv not found. Please ensure the file is in the same directory.")
except Exception as e:
    print(f"An error occurred: {e}")

